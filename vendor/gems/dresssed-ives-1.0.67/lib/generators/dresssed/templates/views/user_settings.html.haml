.well.container-fluid.p50
  .row
    .col-md-4.col-md-offset-4.text-center
      .avatar-uploader
        .inner.vertical-center
          %img{:src => "http://fillmurray.com/200/200"}/
          %span.icon-wrapper
            %i.fa.fa-cloud-upload.fa-fw
          %input{:name => "avatar", :type => "file"}/
      %h3 John McDowall's Settings
      %hr/
  %ul.user-settings
    %li.row
      .col-xs-12.col-md-4.col-md-offset-4.col-md-offset-4
        .setting-name
          Your Username
        %input.col-xs-12.form-control{:type => "text"}/
    %li.row
      .col-xs-12.col-md-4.col-md-offset-4.col-md-offset-4
        .setting-name
          Your Bio
        %textarea.col-xs-12.form-control
        %hr/
    %li.row
      .col-xs-10.col-sm-11.col-md-3.col-md-offset-4.pull-left
        .setting-name
          Weekly Digest
        .setting-details.text-muted
          A Weekly summary of the activity on your account.
      .col-sm-1.col-md-1
        .checkbox.checkbox-primary.pull-right
          %input#checkbox1{:checked => "checked", :type => "checkbox"}/
          %label{:for => "checkbox1"}
    %li.row
      .col-xs-10.col-sm-11.col-md-3.col-md-offset-4.pull-left
        .setting-name
          Private Messages
        .setting-details.text-muted
          Receive an Email when someone sends you a private message.
      .col-sm-1.col-md-1
        .checkbox.checkbox-primary.pull-right
          %input#checkbox2{:checked => "checked", :type => "checkbox"}/
          %label{:for => "checkbox2"}
    %li.row
      .col-xs-10.col-sm-11.col-md-3.col-md-offset-4.pull-left
        .setting-name
          Security Summary
        .setting-details.text-muted
          Receive an email digest of your login activity over the week.
      .col-sm-1.col-md-1
        .checkbox.checkbox-primary.pull-right
          %input#checkbox3{:checked => "checked", :type => "checkbox"}/
          %label{:for => "checkbox3"}
    .row
      .col-md-4.col-md-offset-4
        %button.btn.btn-lg.btn-primary.pull-right{:type => "button"} Save
