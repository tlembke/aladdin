- @title = "Sign up"
#main.devise
  .container-fluid
    .row
      %header.text-center
        %h1
          = app_name
        %p.p0.m0 Sign Up
    .row.mt20
      = form_for resource, as: resource_name, url: registration_path(resource_name),                   |
        html: { class: "form-horizontal col-xs-12 col-md-6 col-md-offset-3", novalidate: true } do |f| |
        = f.error_notification
        .sheet.form-sheet
          .sheet-inner
            = f.form_group :email do |f|
              = f.label :email, class: "form-label"
              = f.email_field :email, autofocus: true, class: ""
              = f.error_messages
            = f.form_group :password do |f|
              = f.label :password, class: "form-label"
              = f.password_field :password, class: ""
              = f.error_messages
            = f.form_group :password_confirmation do |f|
              = f.label :password_confirmation, class: "form-label"
              = f.password_field :password_confirmation, class: ""
              = f.error_messages
        .form-actions.text-right
          = f.submit "Sign up", class: 'btn btn-primary'
    .row.mt20
      .col-xs-12.col-sm-12.col-md-6.col-md-offset-3.text-right
        %ul.list-unstyled.options
          %li.col-xs-12= link_to "Log in", new_session_path(resource_name), class: ''
