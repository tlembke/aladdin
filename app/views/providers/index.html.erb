<% @title = "Listing providers" %>

<% content_for :description do %>
<p>Edit this template in <code>app/views/Providers/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
<%= link_to new_provider_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add Provider
<% end %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Genie</th>
                                <th>Type</th>
                                <th>Name</th>
                                <th>Online</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @providers.each do |provider| %>
              <tr>
                                <td><%= provider.genie_id %></td>
                                <td><%= provider.type %></td>
                                <td><%= provider.name %></td>
                                <td><%= provider.online %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), provider, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_provider_path(provider), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), provider, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @providers.length == 0 %>
              <tr><td colspan=42 class='text-center'>No providers.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>
