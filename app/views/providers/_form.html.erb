
<%= form_for(@provider, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :genie_id do |f| %>
      <%= f.label :genie_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :genie_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :type do |f| %>
      <%= f.label :type, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :type, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :online do |f| %>
      <%= f.label :online, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.check_box :online, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", providers_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

