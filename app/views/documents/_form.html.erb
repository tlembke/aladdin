
<%= form_for(@document, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :description do |f| %>
      <%= f.label :description, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_area :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :patient_id do |f| %>
      <%= f.label :patient_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :patient_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :code do |f| %>
      <%= f.label :code, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.select :code, options_for_select([['Action Plan', 1], ['Information', 2], ['Policy', 3]]) %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :parent do |f| %>
      <%= f.label :parent, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :parent, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :texttype do |f| %>
      <%= f.label :texttype, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :texttype, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :content do |f| %>
      <%= f.label :content, class: 'control-label col-md-2' %>
      <div class='col-md-10'>

        <%= f.text_area :content, :class => "tinymce", :rows => 40,  style: 'width:100%;' %>
         
        </div>
    <% end %>

  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", documents_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

