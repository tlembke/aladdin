
<%= form_for(@doc, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :filename do |f| %>
      <%= f.label :filename, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :filename, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>


    <%= f.form_group :thumbnail do |f| %>
      <%= f.label :thumbnail, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :thumbnail, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :description do |f| %>
      <%= f.label :description, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_area :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :cat do |f| %>
      <%= f.label :cat, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.select :cat, [["--",0],["Handout",1],["Form",2],["Resource",3],["Policy",4]], class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

      <%= f.form_group :tag_string do |f| %>
      <%= f.label :tag_string, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :tag_string, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", docs_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

