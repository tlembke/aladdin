<% @title = "Listing sections" %>

<% content_for :description do %>
<p>Edit this template in <code>app/views/Sections/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
<%= link_to new_section_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add Section
<% end %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Name</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @sections.each do |section| %>
              <tr>
                                <td><%= link_to section.name, section_chapters_path(section) %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), section, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_section_path(section), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), section, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @sections.length == 0 %>
              <tr><td colspan=42 class='text-center'>No sections.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>
