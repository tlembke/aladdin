<% @title = "Showing section" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Sections/show.html.erb</code>.</p>
  <% end %>
          <%= link_to 'Edit Chapters',section_chapters_path(section_id: @section.id),{:class => "btn btn-primary btn-large pull-right"} %> 

  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="sheet sheet-condensed">
          <div class="sheet-inner p30">
            <div class="form-horizontal">
                              <div class="form-inputs">
                 <div class="form-group">
                    <label class="col-md-2 control-label">Name</label>
                    <div class="col-md-8">
                     <div class="form-control uneditable-input">
                        <span>
                          <%= @section.name %>
                        </span>
                    </div>
                  </div>
                </div>
              </div>


                            <div class="form-actions col-md-offset-2">
                <%= link_to fa_icon_tag("pencil") + ' Edit', edit_section_path(@section), class: 'btn btn-primary' %>
                <%= link_to 'Back', sections_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
