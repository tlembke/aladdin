	<div class="col-md-12">
		
			
		<table class='table table-bordered table-condensed table-compact table-responsive'>
			<% @appointments.each do |appt | %>
			<tr>
					<td style="vertical-align:top" <%= "rowspan=2".html_safe if appt['LASTCONSULTS'].length > 0  %>><%= appt['STARTTIME'].strftime("%l:%M") %> </td>
					<td style="vertical-align:top" class="<%= appt['REASON'].downcase.tr(" ", "_").tr("*", "s") %>"><b><%= appt['NAME'] %></b></td>
					<% if appt['LASTCONSULTS'].length > 0  %>
					<tr>

					<td> 
						<% appt['LASTCONSULTS'].each do |consult| %>							
							<span class='small'><%= consult['date'].strftime("%d/%m/%Y") %>
								 <b><%= consult['provider'] %></b>
							
							<% consult['problems'].each do |problem| %> 
								 | <%= problem %>
							<% end %>
						</span>
							<br>
							<div class='small'><%= consult['clinicalText'] %></div>
						<% end %>

					</td>
					</tr>
					<% end %>

			</tr>
			<% end %>
		</table>
	</div>
	

