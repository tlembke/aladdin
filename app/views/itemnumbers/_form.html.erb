
<%= form_for(@itemnumber, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :mbs do |f| %>
      <%= f.label :mbs, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :mbs, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

       <%= f.form_group :sort do |f| %>
      <%= f.label :sort, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :sort, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", itemnumbers_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

