<% @title = "Listing itemnumbers" %>

<% content_for :description do %>
<p>Edit this template in <code>app/views/Itemnumbers/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
<%= link_to new_itemnumber_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add Itemnumber
<% end %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Name</th>
                                <th>MBS</th>
                                <th>Sort</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @itemnumbers.each do |itemnumber| %>
              <tr>
                                <td><%= itemnumber.name %></td>
                                <td><%= itemnumber.mbs %></td>
                                <td><%= itemnumber.sort %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), itemnumber, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_itemnumber_path(itemnumber), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), itemnumber, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @itemnumbers.length == 0 %>
              <tr><td colspan=42 class='text-center'>No itemnumbers.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>
