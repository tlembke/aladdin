<div class="row">
<div class="col-md-8">
<%= render "appointments/datechange" %>
</div>



  <div class="col-md-12">
    <legend>Appointments for <%= @theStartDate.to_s %></legend>
    <table class='table table-striped table-bordered table-condensed table-compact table-responsive'>
    	<thead classs='thead-dark'>
    		<td>Name</td>
    		<td>Nurses</td>


    		<td>ProviderName</td>
    		<td>Reason</td>
    		
    		<td>Charge</td>
    		<td>StartTime</td>
    		<td>Items</td>
    		
    	</thead>
    
    <% @appts.each do |appt| %>
    <tr>
    	<td><%= link_to appt['NAME'], patient_path(:id=> appt['PT_ID_FK']) %></td>
    	<td><%= @nurses[appt['PT_ID_FK']] %>

    	<td><%= appt['PROVIDERNAME'] %></td>
    	<td><%= appt['REASON'] %></td>
    	<td><%= appt['CHARGE'] %></td>
    	<td><%= billing_symbol(appt['STATUS'],  appt['STARTTIME'].strftime("%l:%M")) %></td>
    	<td>
    	
    		<% appt['ITEMS'].each_with_index do |item, index | %>
    			<%= item['ITEMNUM'] %>
    			<%= "|" if index < appt['ITEMS'].length - 1%>
    		<% end %>
    			

    	</td>

    </tr>
    <% end %>
</table>

  </div>


</div>