<% @title = "Bookings" %> 
<legend><i class="fa fa-line-chart"></i>Bookings</legend>



<table class='table table-condensed table-striped table-bordered'>
<thead>
<tr>
	<th>Day</th>
	<th>Number Docs/th>
	<th>Total Booked</th>
	<th>Routines Booked</th>
	<th>Routines Available</th>
	<th>Acutes Available</th>
	<th>Acutes Booked</th>
	<th>Total Available</th>

</tr>

</thead>

	<tbody>
	<% @bookings.each do |booking| %>
	<tr>
    <td><%= booking[0].strftime("%d/%m/%Y") %><td>
	<td><%= booking[1]%></td></tr>

	<td><%= booking[3]%></td></tr>

	<td><%= booking[4]%></td></tr>

	<td><%= booking[2]%></td></tr>

	<td><%= booking[5]%></td></tr>

	<td><%= booking[6]%></td></tr>

	<td><%= booking[2].to_i + booking[5].to_i  %></td>
	</tr>
	<% end %>

   
</tbody>
</table>
