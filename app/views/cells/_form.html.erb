
<%= form_for(@cell, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :register_id do |f| %>
      <%= f.label :register_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :register_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :patient_id do |f| %>
      <%= f.label :patient_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :patient_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :header_id do |f| %>
      <%= f.label :header_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :header_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :value do |f| %>
      <%= f.label :value, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :value, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :date do |f| %>
      <%= f.label :date, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.date_select :date, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :note do |f| %>
      <%= f.label :note, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_area :note, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", cells_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

