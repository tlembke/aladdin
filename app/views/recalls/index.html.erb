<% @title = "Listing recalls" %>

<% content_for :description do %>
<p>Edit this template in <code>app/views/Recalls/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
<%= link_to new_recall_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add Recall
<% end %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Title</th>
                                <th>Cat</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @recalls.each do |recall| %>
              <tr>
                                <td><%= recall.title %></td>
                                <td><%= Recall.cats[recall.cat] %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), recall, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_recall_path(recall), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), recall, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @recalls.length == 0 %>
              <tr><td colspan=42 class='text-center'>No recalls.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>
