
	
	$('#theTalk').slideUp(1200);
	$('#theTalk').promise().done(function(){
		$('#theTalk').html("<%= @theText %>");  	
		$('#theTalk').slideDown(1200);
		$('#flashes').html("<%= escape_javascript(render 'layouts/flashes') %>");
	});
	
	
	$('#nextMessage').slideUp(1200);
	$('#nextMessage').promise().done(function(){
		
    	$('#nextMessage').html("<%= escape_javascript render(:partial => @thePartial,theText: @theText, vaxtype: @vaxtype, patient: @thePatient, clinic: @clinic, booker: @booker) %>")
    	$('#nextMessage').slideDown(1200);

	});





