<div class="row" id="topofapptform">
  <div class="col-sm-12 col-xs-12">
  <%= form_tag({action: "confirm"}, method: "post",class: "form-vertical", id: "appt_form" ) do %>
   <fieldset>
     <legend>Make Appointment</legend>
     <div id='appt_doctor'></div>
     <div id='appt_date'></div>
     <div id='appt_time'></div>
     <%= hidden_field_tag :doctor_id,  0  %>
     <%= hidden_field_tag :date, 0  %>
     <%= hidden_field_tag :time, 0  %>
     <%= hidden_field_tag :single, 0  %>
     <%= hidden_field_tag :appt_id, 0  %>

             
     <div class="row text-center">
                  <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-primary btn-smactive" id="apptduration_single">
                      <input type="radio" name="apptduration"  autocomplete="off" value="single" checked>Single (15mins)</label>
                    <label class="btn btn-primary btn-sm" id="apptduration_double">
                      <input type="radio" name="apptduration"  value="double" autocomplete="off">Double (30mins)</label>
                    <label class="btn btn-primary btn-sm" id="apptduration_annual">
                      <input type="radio" name="apptduration"  value="annual" autocomplete="off">Annual Check</label>
                    </div>





      </div>
         
    <div class="form-group row">
          <div class="col-sm-12  col-md-12 col-xs-12">
          <label class= "form-label">Appointment</label><p>


          
           
          
           <%= text_field_tag :appttime, nil, class: "input-large col-sm-11 col-xs-11",  :readonly=> "readonly", :value=> "Click on chosen appointment" %>
           <%= label_tag :appttime, "", class: "form-label" %>
         
          
        </div>
    </div>


     <div class="form-group row">
         <div class="col-sm-12  col-md-12 col-xs-12">
          <label class= "form-label">Patient Surname</label><p>

            <%= text_field_tag :Surname, nil, class: "input-large col-sm-11 col-xs-11" %> 
           <%= label_tag :Surname, "", class: "form-label" %>
          </div>
    </div>


    <div class="form-group row">
         <div class="col-sm-12 col-md-12 col-xs-12">
          <label class= "form-label">Patient First Name</label><p>
            <%= text_field_tag :FirstName, nil, class: "input-large col-sm-11 col-xs-11" %> 
           <%= label_tag :FirstName, "", class: "form-label" %>
          </div>
    </div>

    <div class="form-group row">
         <div class="col-sm-12  col-md-12 col-xs-12">
          <label class= "form-label">Mobile</label><p>
            <%= text_field_tag :mobile, nil, class: "input-large col-sm-11 col-xs-11" %> 
           <%= label_tag :mobile, "", class: "form-label" %>
          </div>
    </div>

     <div class="form-actions col-sm-offset-4 col-sm-8 col-xs-offset-4 col-xs-8">
       <%= submit_tag "Book", class: "btn-primary" %>
     </div>
   </fieldset>

<% end %>
</div>
</div> <%# end row %>