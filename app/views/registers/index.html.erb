<% @title = "Listing registers" unless @code == "1"%>
<% @title = "Listing nursing homes" if @code == "1"%>

<% content_for :description do %>
<p>Edit this template in <code>app/views/Registers/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
<%= link_to new_register_path(code: @code), class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add <%= @code == "1" ? "Nursing Home" : "Register" %>
<% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>

              <% @registers.each do |register| %>
              <tr>
              <td><%= register.name %></td>
              <td><%= register.code == 0 ? "Register" : "Nursing Home" %></td>
 


                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), register, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_register_path(register), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), register, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @registers.length == 0 %>
              <tr><td colspan=42 class='text-center'>No registers.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>