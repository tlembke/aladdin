
<div class="row">


   <div class="col-md-6">
      <%= render "patient" %>
   </div>
                 <div class="col-md-6">
                        <h2>Annual Check - Pink Slip <a href="#" class="btn btn-primary noprint" onclick="window.print();return false;"><i class="fa fa-print"></i></a> </h2>


                </div>



<hr>
</div>


 <div class="row"> <!-- Full screen row -->
<div class="col-md-6">

 
          <legend class="panel-title"><i class="fa fa-heartbeat"></i>  Current Conditions</legend>
      <div class="panel-body">
                <% @current_problems = @patient.current_problems %>
                <%= render "problems_notes" %>
       </div>

</div> <!-- col -->

<div class="col-md-6">
     
   

          <legend class="panel-title"><i class="fa fa-hospital-o"></i>  Medical History</legend>
     
             <div class="panel-body">
                <% @procedures = @patient.procedures %>
                 <% @events = @patient.events %>
                 <%= render "history_notes" %>
            </div>

</div> <!-- col -->


<div class="col-md-12">
<hr>
</div>

</div> <!--  row -->

<div class="row no-page-break-inside"> <!-- Full screen row -->

<div class="col-md-6">

          <legend class="panel-title"><i class="fa fa-medkit"></i>  Medications</legend>
       
            <div class="panel-body">
                <% @medications = @patient.medications %>
                <% if @medications.count > 0 %>
                (Please check this medication list is up to date and let us know of any changes that should be made to our record)<br><br>
                <% end %>
                    <%= render "medications_no_legend" %>
            </div>

</div>
<div class="col-md-6">

            <legend class="panel-title"><i class="fa fa-flag"></i> Allergies</legend>
         
             <div class="panel-body">
             <% @allergies = @patient.allergies %>
                    <%= render "allergies" %>
            </div>

</div> <!-- col -->
</div> <!--  row -->


<div class="row no-page-break-inside"> <!-- Full screen row -->
<div class="col-md-12">

<%= render "annual_measures" %>


            <%= render "bowel" %>









                        <%= render "womens_cancer" %>


                        <%= render "cardiac_risk" %>

            <%= render "lifestyle_check" %>
           



</div> <!-- col -->
</div> <!--  row -->

<div class="row no-page-break-inside"> <!-- Full screen row -->
<div class="col-md-12">



            <legend class="panel-title"><i class="fa fa-medkit"></i>  Immunisations</legend>
       
            <div class="panel-body">
             <table class='table table-striped table-bordered table-condensed'>
                         <tr><td width=50%>Tetanus status</td><td><%= "Given on " + @tetanus.strftime("%d/%m/%Y") if @tetanus %><%= "No record" unless @tetanus %>
                <% if @tetanus_msg %>
                         <a class="btn btn-warning"> Boostrix Due </a>
                <% else %>
                        <a class="btn btn-success"> Up to Date </a>

                <% end %>

            </td></tr>

             <% @immunisations.each do |immunisation | %>
            <tr><td width=50%><%= immunisation["GIVENDATE"].strftime("%d/%m/%Y") %></td><td><%= immunisation["VACCINE"] %></td></tr>
            <% end %>
            </table>
            </div>

</div> <!-- col -->
</div> <!--  row -->


<div class="row page-break-before"> <!-- Full screen row -->
<div class="col-md-12">

            <legend class="panel-title"><i class="fa fa-medkit"></i>  Charts</legend>
       
            <div class="panel-body">
            <% @measures.each do |measure| %>
                    <% @measure = measure %>

                 <%= render partial: "measures/measure_simple", object: @measure %>
            <% end %>
            </div>
</div> <!-- col -->
</div> <!--  row -->

<div class="row page-break-before"> <!-- Full screen row -->
<div class="col-md-12">

           <%= render partial: "tasks", locals: {tasks: @tasks} %>
           
            <%= render partial: "medchanges", locals: {meds: @meds, changes: @changes} %> 
            <%= render partial: "notes",locals: {notes: @notes} %> 
            <%= render partial: "tests",locals: {tests: @tests} %>
             <%=render partial: "appointments",locals: {appointments: @appointments} %>

</div> <!-- col -->
</div> <!--  row -->
