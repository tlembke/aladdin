<div class="modal fade new-goal-modal" id="monitor-modal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4> Edit Monitor</h4>
        </div>
     	 <div class="modal-body">

        	<%= form_for Member.new, remote: true do |f| %>
			  <%= f.error_notification %>
			  <%= f.hidden_field :patient_id, :value => 0 %>
			  <%= f.hidden_field :condition_id, :value => 0  %>
			  <div class="form-inputs">
			    <%= f.form_group :every do |f| %>
			      <%= f.label :every %>
				  <%= f.text_field :every, class: 'form-control' %>
				  <% end %>
			  



			  </div> <!-- form inputs -->

			  <div class="form-actions">
			    <%= f.submit class: 'btn btn-primary' %>
			    <%= link_to "Cancel", goals_path, class: 'btn' %>
			  </div> <!-- form actions -->
			  <% end %>  <!-- form -->
			  </div> <!-- modal body -->
			  <div class="modal-footer">
	          	<button type="submit" class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
	          </div> <!-- modal footer -->
		
		
        
      </div> <!-- modal content -->
    </div> <!-- modal dialog -->
  </div>  <!-- modal -->