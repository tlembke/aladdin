 <div id='consult_form' >
 <%= form_tag({action: "consult"}, remote:true, class: "form-vertical") do %>
  <%= hidden_field_tag :fullname, @patient.fullname %>
  <%= hidden_field_tag :providername, session[:username] %>
   <fieldset>
     <div class="form-group row">
       <%= label_tag :name, "Consult Type", class: "form-label col-sm-2" %>
         <%= select_tag "type", options_for_select([ "Consult", "Home Visit","After Hours Consult", "After Hours Home Visit", "Phone Call", "After Hours Phone Call","Telehealth Consult","Video Consult" ], "Consult"), class: "input-medium col-sm-5" %> 
          <%= check_box_tag "complete",class: "input-medium col-sm-1" %>
          <%= label_tag :name, "Complete", class: "col-sm-1" %>
          

      </div>


      <div class="form-group row">
       <%= label_tag :name, "Billing item", class: "form-label col-sm-2" %>
        <%= select_tag "mbs", options_from_collection_for_select(Itemnumber.order("sort").all,:id,:name), class: "input-small col-sm-5" %> 
        <%= label_tag :name, "Note", class: "form-label col-sm-1" %>
        <%= text_field_tag :billingnote, "BB", class: "input-small col-sm-1", id: "billingnote_field"  %>






      </div>

       <div class="form-group row">
         <%= label_tag :name, "Consult Delivery", class: "form-label col-sm-2" %>
              <div class="btn-group btn-group-toggle col-sm-4" data-toggle="buttons">
                    <label class="btn btn-secondary active">
                      <input type="radio" name="delivery" id="option1" autocomplete="off" value="1" checked> Clinic
                    </label>
                    <label class="btn btn-secondary">
                      <input type="radio" name="delivery" id="option2" value="2"autocomplete="off"> Home
                    </label>
                    <label class="btn btn-secondary">
                      <input type="radio" name="delivery" id="option3" value="3"autocomplete="off"> Phone
                    </label>
                     <label class="btn btn-secondary">
                      <input type="radio" name="delivery" id="option4" value="4"autocomplete="off"> Video
                    </label>
            </div>
          <%= label_tag :name, "Time", class: "form-label col-sm-1" %>
              <div class="btn-group btn-group-toggle col-sm-4" data-toggle="buttons">
                    <label class="btn btn-secondary active">
                      <input type="radio" name="consulttime" id="option1A" autocomplete="off" checked value="1"> In Hours
                    </label>
                    <label class="btn btn-secondary">
                      <input type="radio" name="consulttime" id="option2A" autocomplete="off" value="2"> After Hours
                    </label>
                    <label class="btn btn-secondary">
                      <input type="radio" name="consulttime" id="option3A" autocomplete="off" value="3"> Unsociable
                    </label>
            </div>           

      </div> <!-- form-group -->
      <div class="form-group row">
        <%= label_tag :name, "Consult Note", class: "form-label col-sm-2" %>
        <%= text_area_tag :consult, nil, class: "input-medium col-sm-9", id: "consult_note_field"  %>
     </div>
     <div class="form-actions col-sm-offset-3 col-sm-9">
       <%= submit_tag "Save in Genie", class: "btn-primary" %>
     </div>
   </fieldset>
<% end %>

</div>
<div id="saved_consult"></div>