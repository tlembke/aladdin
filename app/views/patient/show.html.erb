<div class="row">

    			<div class="col-md-4 col-md-offset-3">
    	 			<h2><%= @patient.fullname %></h2>
    	 		</div>
    	 		<div class="col-md-5">
    	 			<div class="row">
                    <div class="btn-group btn-group-justified">
                    <%= link_to 'Print Patient Copy',patient_path(@patient.id, :consult_id=> @consult['ID'], :print => "true"),{:class => "btn btn-lg btn-primary"} %>
                    <%= link_to 'Careplan', careplan_patient_path(@patient.id), {:class => "btn btn-lg btn-primary"} %>
                    <%= link_to 'Summary', healthsummary_patient_path(@patient.id), {:class => "btn btn-lg btn-primary"} %>
    	 			</div>
                    <hr>
                    </div>
					<div class="row">
			         	<div class="col-md-5">
			         	DOB: 
			         	</div>
			         	<div class="col-md-7">
			         	<%= @patient.dob.strftime("%d/%m/%y") %>
			         	</div>
			         </div>
			         <div class="row">
			         	<div class="col-md-5">
			         	Address: 
			         	</div>
			         	<div class="col-md-7">
			         	<%= @patient.addressline1 + "," if @patient.addressline1 !="" %>
			         	<%= @patient.addressline2 + "," if @patient.addressline2 !="" %>
			         	<%= @patient.suburb %>
			         	</div>
         			</div>
         			<div class="row">
    	 			<hr>
    	 			</div>
         		</div>
</div>	

