<% @title = "Listing tags" %>

<% content_for :description do %>
<p>Edit this template in <code>app/views/Tags/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
<%= link_to new_tag_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add Tag
<% end %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Name</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @tags.each do |tag| %>
              <tr>
                                <td><%= tag.name %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), tag, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_tag_path(tag), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), tag, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @tags.length == 0 %>
              <tr><td colspan=42 class='text-center'>No tags.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>
