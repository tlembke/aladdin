
<%= form_for(@case, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :code do |f| %>
      <%= f.label :code, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :code, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :patient_id do |f| %>
      <%= f.label :patient_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :patient_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :message do |f| %>
      <%= f.label :message, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_area :message, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", cases_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

