
<%= form_for(@header, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

        <%= f.form_group :register_id do |f| %>
      <%= f.label :register_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :register_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :type do |f| %>
      <%= f.label :code, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :code, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
        <%= f.form_group :type do |f| %>
      <%= f.label :keyword, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :keyword, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

        <%= f.form_group :type do |f| %>
      <%= f.label :sort, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :sort, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :special do |f| %>
      <%= f.label :special, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.check_box :special, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", headers_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

