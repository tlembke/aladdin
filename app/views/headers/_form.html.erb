
<%= form_for(@header, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    

    <%= f.hidden_field :register_id,  class: 'form-control' %>

    <%= f.form_group :type do |f| %>
      <%= f.label :code, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        
        <%= f.select(:code, [['Checkbox', 'cb'], ['Note (small)', 'string'], ['Note (large)','note'], ['Date','date'], ['Consult Reason','consult'],['Formula','formula']], {class: 'form-control'}) %>
        <%= f.error_messages %>
      </div>
    <% end %>


        <%= f.form_group :type do |f| %>
      <%= f.label :sort, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :sort, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

      Fields below for admin only :
        <%= f.form_group :type do |f| %>
      <%= f.label :keyword, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :keyword, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>


    <%= f.form_group :special do |f| %>
      <%= f.label :special, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.check_box :special, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", register_headers_path(register_id: @header.register_id), class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

