<% @title = "Listing paragraphs" %>

<% content_for :description do %>
<p>Edit this template in <code>app/views/Paragraphs/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
<%= link_to new_paragraph_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add Paragraph
<% end %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Patient</th>
                                <th>Chapter</th>
                                <th>Paragraph</th>
                                <th>Show</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @paragraphs.each do |paragraph| %>
              <tr>
                                <td><%= paragraph.patient_id %></td>
                                <td><%= paragraph.chapter_id %></td>
                                <td><%= paragraph.paragraph %></td>
                                <td><%= paragraph.show %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), paragraph, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_paragraph_path(paragraph), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), paragraph, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @paragraphs.length == 0 %>
              <tr><td colspan=42 class='text-center'>No paragraphs.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>
